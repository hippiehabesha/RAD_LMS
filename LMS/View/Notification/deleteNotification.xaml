<Window x:Class="LMS.View.Notification.deleteNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS.View.Notification"
        mc:Ignorable="d"
        Title="deleteNotificaion" 
        Height="450" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Notification ID"/>
                <TextBox x:Name="txtNotificationId"
                 Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button Content="Delete Notification"
                Click="Delete_Notification_Button"
                Width="120"
                HorizontalAlignment="Center"
                Margin="5"/>
                <Button Content="Back"
                Click="Back_Button"
                Width="100"
                HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
