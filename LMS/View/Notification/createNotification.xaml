<Window x:Class="LMS.View.Notification.createNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS.View.Notification"
        mc:Ignorable="d"
        Title="createNotification" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="User ID"/>
                <TextBox x:Name="txtUserId"
                         Width="163"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <Label Content="Message"/>
                <TextBox x:Name="txtMessage"
                         Width="150"
                         Height="85"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button Content="Create Notification"
                        Click="Create_Notification_Button"
                        Width="120"
                        HorizontalAlignment="Center"
                        Margin="5"/>
                <Button Content="Back"
                        Click="Back_Button"
                        Width="100"
                        HorizontalAlignment="Center"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
