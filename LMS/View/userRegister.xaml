<Window x:Class="LMS.View.userRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS.View"
        mc:Ignorable="d"
           Title="Register" Height="450" Width="450"
    WindowStartupLocation="CenterScreen">


    <StackPanel HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
        <TextBlock Text="Register" 
         FontSize="20" 
         FontWeight="Bold" 
         Margin="0,0,0,10"
         TextAlignment="Center"/>
        <StackPanel>
            <Label Content="Username"/>
            <TextBox Name="txtUsername" 
                 Width="200" 
                 Margin="0,0,0,10"/>
            <Label Content="Password"/>
            <PasswordBox Name="txtPassword" 
                     Width="200" 
                     Margin="0,0,0,10"/>
            <Label Content="Confirm Password"/>
            <PasswordBox Name="txtConfirmPassword" 
                     Width="200" 
                     Margin="0,0,0,10"/>
            <Label Content="Role"/>
            <ComboBox Name="cmbRole" 
                  Width="200" 
                  Margin="0,0,0,10">
                <ComboBoxItem>Admin</ComboBoxItem>
                <ComboBoxItem>Librarian</ComboBoxItem>
                <ComboBoxItem>Member</ComboBoxItem>
            </ComboBox>
            <Button Content="Register" 
                    Width="200" 
                    Margin="5"
                    Click="Register_Click"/>
            <Button Content="Login" 
                    Width="200" 
                    Margin="5"
                    Click="Login_Click"/>
        </StackPanel>

    </StackPanel>


</Window>
