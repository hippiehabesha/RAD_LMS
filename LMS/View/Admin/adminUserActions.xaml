<Page x:Class="LMS.View.Admin.adminUserActions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LMS.View.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="425" d:DesignWidth="300"
      Title="adminUserActions"
      Background="LightGray">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Save New User"
                    Margin="5"
                    Click="Save_Button"/>
            <Button Content="Delete Exiting User"
                    Margin="5"
                     Click="Delete_Button"/>
            <Button Content="Update User"
                    Margin="5"
                     Click="Update_Button"/>
            <Button Content="View all Users"
                    Margin="5"
                    Click="View_Button"/>
            <Button Content="Change Users password"
                    Margin="5"
                    Click="Change_Password_Button"/>

        </StackPanel>
        
    </Grid>
</Page>
