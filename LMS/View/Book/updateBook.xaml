<Window x:Class="LMS.View.Book.updateBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS.View.Book"
        mc:Ignorable="d"
        Title="updateBook" 
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal"
            Margin="5">
                <Label Content="Book ID"/>
                <TextBox x:Name="txtBookID"
                         Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <Label Content="Title"/>
                <TextBox x:Name="txtTitle"
                         Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <Label Content="Author"/>
                <TextBox x:Name="txtAuthor"
                            Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <Label Content="Genre"/>
                <TextBox x:Name="txtGenre"
                         Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Vertical"
               HorizontalAlignment="Center"
               Margin="5">
                <Button Content="Get Book Info"
                        Margin="5"
                        Click="Get_Book_Info_Button"
                        Width="80"/>
                <Button Content="Update Book"
                        Margin="5"
                        Click="Update_Book_Button"
                        Width="80"/>
                <Button Content="Back"
                        Margin="5"
                        Click="Back_button"
                        Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
