<Window x:Class="LMS.View.Book.addBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS.View.Book"
        mc:Ignorable="d"
        Title="addBook" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="200">
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <Label Content="Title"/>
                <TextBox x:Name="txtTitle"
                         Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5"
                        >
                <Label Content="Author"/>
                <TextBox x:Name="txtAuthor"
                         Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <Label Content="Genre"/>
                <TextBox x:Name="txtGenre"
             Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <Label Content="ISBN"/>
                <TextBox x:Name="txtISBN"
             Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <Label Content="Availability"/>
                <TextBox x:Name="txtAvailability"
                            Width="100"/>
            </StackPanel>   
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        Margin="5">
                <Button Content="Add Book"
                        Margin="5"
                        Click="Add_Book_Button"
                        Width="60"/>
                <Button Content="Back"
                        Margin="5"
                        Click="Back_button"
                        Width="60"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
