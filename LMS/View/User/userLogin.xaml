<Window x:Class="LMS.View.userLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS.View"
        mc:Ignorable="d"
        Title="userLogin" Height="450" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#f0f0f0">
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="20">
        <TextBlock Text="Login"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   TextAlignment="Center"
                   Foreground="#333"/>
        <StackPanel>
            <Label Content="Username"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#555"/>
            <TextBox Name="txtUsername"
                     Width="250"
                     Margin="0,0,0,15"
                     Padding="5"
                     FontSize="14"/>
            <Label Content="Password"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#555"/>
            <PasswordBox Name="txtPassword"
                         Width="250"
                         Margin="0,0,0,20"
                         Padding="5"
                         FontSize="14"/>
            <Button Content="Login"
                    Width="250"
                    Margin="0,5"
                    Padding="10"
                    Background="#007ACC"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="Login_Click"/>
            <Button Content="Register"
                    Width="250"
                    Margin="0,5"
                    Padding="10"
                    Background="#E0E0E0"
                    Foreground="#333"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="Register_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
