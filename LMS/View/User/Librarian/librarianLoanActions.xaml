<Page x:Class="LMS.View.User.Librarian.librarianLoanActions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LMS.View.User.Librarian"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="400"
      Title="librarianLoanActions"
      Background="LightGray">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="View Loans"
                    Margin="5"
                    Click="View_Loan_Button"/>
            <Button Content="Issue Book Loans"
                    Margin="5"
                    Click="Issue_Loan_Button"/>
            <Button Content="Return Book Loans"
                    Margin="5"
                    Click="Return_Loan_Button"/>     
        </StackPanel>
    </Grid>
</Page>
