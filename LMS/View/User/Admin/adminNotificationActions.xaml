<Page x:Class="LMS.View.User.Admin.adminNotificationActions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LMS.View.User.Admin"
      mc:Ignorable="d" 
    d:DesignHeight="425" d:DesignWidth="300"
      Title="adminNotificationActions"
      Background="LightGray">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                 VerticalAlignment="Center">
            <Button Content="Create Notification"
                 Margin="5"
                 Click="Create_Notification_Button"/>
            <Button Content="Delete Notification"
                 Margin="5"
                  Click="Delete_Notification_Button"/>
            <Button Content="Update Notification"
                 Margin="5"
                  Click="Update_Notification_Button"/>
            <Button Content="View Notification"
                 Margin="5"
                 Click="View_Notification_Button"/>
            
        </StackPanel>

    </Grid>
</Page>
