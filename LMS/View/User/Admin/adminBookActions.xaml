<Page x:Class="LMS.View.User.Admin.adminBookActions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LMS.View.User.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="400"
      Title="adminBookActions"
      Background="LightGray">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
             VerticalAlignment="Center">
            <Button Content="Add New Book"
                    Margin="5"
                    Click="Add_Book_Button"/>
            <Button Content="Delete Book"
                    Margin="5"
                    Click="Delete_Book_Button"/>
            <Button Content="Update Book"
                    Margin="5"
                    Click="Update_Book_Button"/>
            <Button Content="View Book"
                    Margin="5"
                    Click="View_Book_Button"/>
            
        </StackPanel>

    </Grid>
</Page>
