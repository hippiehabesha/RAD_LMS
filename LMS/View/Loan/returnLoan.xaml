<Window x:Class="LMS.View.Loan.returnLoan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS.View.Loan"
        mc:Ignorable="d"
        Title="Return Loan" 
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Loan ID:" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="txtLoanID" 
                     Width="200" 
                     Margin="0,0,0,10"/>
            <TextBlock Text="Book ID:" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="txtBookID" 
                      Width="200"
                      Margin="0,0,0,10"/>           
            <TextBlock Text="Due Date:" 
                       Margin="0,0,0,5"/>
            <DatePicker x:Name="dpDueDate" 
                        Width="200" 
                        Margin="0,0,0,20"/>

            <TextBlock Text="Return Date:" 
                       Margin="0,0,0,5"/>
            <DatePicker x:Name="dpReturnDate" 
                        Width="200" 
                        Margin="0,0,0,20"/>

            <Button Content="Return Book" 
                    Click="ReturnBook_Button" 
                    Width="100" 
                    HorizontalAlignment="Center"
                    Margin="5"/>
            <Button Content="Back" 
                     Click="Back_Button" 
                     Width="100" 
                     HorizontalAlignment="Center"
                     Margin="5"/>

        </StackPanel>
    </Grid>
</Window>
